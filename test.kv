#:import MapView kivy.garden.mapview.MapView

<SearchMedicineScreen>:
    BoxLayout:
        padding: 10
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 5
            TextInput:
                hint_text: 'Search for the type of medicine you need.'
                multiline: False
                size_hint_y: None
                height: '50dp'
            Button:
                text: 'Search'
                height: '50dp'
                width: '50dp'
                size_hint_x: None
                size_hint_y: None
        BoxLayout:
            ColoredBox:
                color: (1, 1, 1, 0.25)
                size_hint_x: 0.5
            ColoredBox:
                color: (1, 1, 1, 0.5)
                size_hint_x: 0.5

<ColoredBox@Widget>
    color: (1, 1, 1, 1)
    canvas.before:
        Color: 
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size


<SearchArticlesScreen>:
    BoxLayout:
        padding: 10
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 5
            TextInput:
                hint_text: 'Search for articles.'
                multiline: False
                size_hint_y: None
                height: '50dp'
            Button:
                text: 'Search'
                height: '50dp'
                width: '50dp'
                size_hint_x: None
                size_hint_y: None


        BoxLayout:
            ColoredBox:
                color: (1, 1, 1, 0.75)

<WeGamingScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10

        Label:
            id: score_label
            text: "Score: " + str(root.score)
            size_hint_y: None
            height: '30dp'

        Image:
            id: img
            source: root.image_source
            size_hint_y: 0.6

        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: 0.4

            Button:
                id: choice_1
                on_press: root.check_answer(self)
            Button:
                id: choice_2
                on_press: root.check_answer(self)
            Button:
                id: choice_3
                on_press: root.check_answer(self)
            Button:
                id: choice_4
                on_press: root.check_answer(self)

<HomeScreen>:
    BoxLayout:
        padding: 10
        Label:
            text: 'This is the home screen, there should be text here describing the app'
            color: (1,1,1,1)
            font_size: '18sp'
            size_hint_x: 1
            size_hint_y: 1
            height: '100dp'
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'

<MapScreen>:
    BoxLayout:
        MapView:
            id: map_view
            lat: 14.8527
            lon: 120.8160
            zoom: 20

BoxLayout:
    orientation: 'vertical'

    ScreenManager:
        id: screen_manager
        HomeScreen:
            name: 'home_screen'
        SearchMedicineScreen:
            name: 'medicine_screen'
        SearchArticlesScreen:
            name: 'article_screen'
        WeGamingScreen:
            name: 'gaming_screen'
        MapScreen:
            name: 'map_screen'

    
    BoxLayout:
        size_hint_y: None
        height: '100dp'
        Button:
            text: 'Home'
            on_press: screen_manager.current = 'home_screen'
        Button:
            text: 'Search Medicine'
            on_press: screen_manager.current = 'medicine_screen'
        Button:
            text: 'Research Articles'
            on_press: screen_manager.current = 'article_screen'
        Button:
            text: 'Game'
            on_press: screen_manager.current = 'gaming_screen'
        Button:
            text: 'Nearest Drug Stores'
            on_press: screen_manager.current = 'map_screen'

